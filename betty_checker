/**
 * print_array - Prints an array of integers
 *
 * @a: Pointer to the array of integers
 * @n: Number of elements in the array
 *
 * Description: This function prints an array of integers to the standard output
 * in the format "[n1, n2, ..., nX]".
 *
 * Return: Nothing
 */

void print_array(int *a, int n)
{
  int i;

  if (n <= 0)
    {
      printf("[]\n");
      return;
    }

  printf("[%d", a[0]);

  for (i = 1; i < n; i++)
    printf(", %d", a[i]);

  printf("]\n");
}

